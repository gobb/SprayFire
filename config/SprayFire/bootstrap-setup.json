{
    "SprayFire": {
        "version": "0.1.0-alpha",
        "session-handler": {
            "bootstrap": "on",
            "handler": "SprayFire.Session.SessionHandler",
        },
        "exception-handler": {
            "bootstrap": "on",
            "handler": "SprayFire.Core.Handler.ExceptionHandler",
            "method": "trap",
            "constructor": {
                "content-replacement": "500.html",
                "headers": {
                    "0": "HTTP/1.1 500 Internal Server Error",
                    "1": "Content-type: text/html;charset=UTF-8",
                }
            }
        },
        "error-handler": {
            "bootstrap": "on",
            "handler": "SprayFire.Error.ErrorHandler",
            "method": "trap"
        }
    }
}
